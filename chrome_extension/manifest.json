{
    "manifest_version": 2,
    "name": "Task Creator",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "storage",
      "http://localhost:8000/"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
        "default_title": "Save text as Task",
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon_16.png",
            "48": "icons/icon_48.png",
            "128": "icons/icon_128.png"
          }
        },
        "icons": {
          "16": "icons/icon_16.png",
          "48": "icons/icon_48.png",
          "128": "icons/icon_128.png"
        }
}
  